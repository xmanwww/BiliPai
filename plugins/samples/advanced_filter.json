{
    "id": "advanced_filter",
    "name": "高级过滤器",
    "description": "使用 AND/OR 复合条件进行精确过滤",
    "version": "1.0.0",
    "author": "BiliPai",
    "type": "feed",
    "rules": [
        {
            "condition": {
                "and": [
                    {
                        "field": "duration",
                        "op": "lt",
                        "value": 60
                    },
                    {
                        "field": "title",
                        "op": "contains",
                        "value": "搬运"
                    }
                ]
            },
            "action": "hide"
        },
        {
            "condition": {
                "or": [
                    {
                        "field": "owner.name",
                        "op": "contains",
                        "value": "营销号"
                    },
                    {
                        "field": "title",
                        "op": "regex",
                        "value": "震惊.*必看|不看后悔"
                    }
                ]
            },
            "action": "hide"
        },
        {
            "condition": {
                "and": [
                    {
                        "field": "stat.view",
                        "op": "lt",
                        "value": 1000
                    },
                    {
                        "or": [
                            {
                                "field": "title",
                                "op": "contains",
                                "value": "广告"
                            },
                            {
                                "field": "title",
                                "op": "contains",
                                "value": "推广"
                            }
                        ]
                    }
                ]
            },
            "action": "hide"
        }
    ]
}